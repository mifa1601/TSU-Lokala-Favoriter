<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="LokalaFavoriter.Login"
             BackgroundColor="WhiteSmoke">
    <ContentPage.Content>
        <StackLayout>
            <Entry x:Name="username" Placeholder="Användarnamn" />
            <Entry x:Name="password" Placeholder="Lösernord" IsPassword="True" />
            <Button x:Name="submit" Text="Logga in" Clicked="btn_login"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>